<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAAFFA"
    tools:context=".FirstScreen">

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/tv_firstScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="100sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/bt_go_second_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_go_second_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#DA81DA"
        android:text="Aperte para ir para segunda tela"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@id/bt_go_thrid_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_firstScreen"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/bt_go_thrid_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aperte para ir para terceira tela"
        android:textSize="22dp"
        android:background="#DA81DA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_go_second_screen" />
</androidx.constraintlayout.widget.ConstraintLayout>