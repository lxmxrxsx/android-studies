<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_capsule"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cl_coffee"
        android:background="#ffc480">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_capsule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capsulas"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@id/tv_capsule_subtitle"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_capsule_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Café velho que falam que é premium"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_capsule"
            android:layout_width="140dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/capsules" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_coffee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#4f2516"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_capsule">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_coffee_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Café"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@id/tv_coffee_subtitle"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_coffee_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Café em grão bonito e cheiroso"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="160dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cafehmhmhm" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>